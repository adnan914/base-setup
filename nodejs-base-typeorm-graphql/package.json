{
  "name": "node_typescript_typeorm",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "tsc --build --clean",
    "start": "npm run build && node dist/index.js",
    "build": "npm run clean && tsc && xcopy public dist\\public /E /I /Y",
    "build_linux": "tnpm run clean && tscsc && cp -r public dist/public",
    "start:prod": "npm run build && cross-env NODE_ENV=production node -r dotenv/config ./dist/index.js",
    "start:dev": "cross-env NODE_ENV=development nodemon",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:revert": "npm run typeorm -- migration:revert -d ./src/config/app.data.source.ts",
    "migration:create": "typeorm-ts-node-commonjs migration:create src/migrations/$npm_config_name",
    "migration:generate": "npm run typeorm -- migration:generate src/migrations/$npm_config_name -d src/config/app.data.source.ts",
    "migration:run": "npm run typeorm -- migration:run -d ./src/config/app.data.source.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@as-integrations/express5": "^1.1.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "graphql": "^16.11.0",
    "graphql-middleware": "^6.1.35",
    "graphql-tag": "^2.12.6",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.5",
    "nodemon": "^3.1.7",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.17.2",
    "@types/nodemailer": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
